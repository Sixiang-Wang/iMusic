<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.messagepart.dao.MessageMapper">
    <resultMap id="BaseResultMap" type="com.java.messagepart.domain.Message" >
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="to" jdbcType="INTEGER" property="to"/>
        <result column="from" jdbcType="INTEGER" property="from"/>
        <result column="text" jdbcType="LONGVARCHAR" property="text"/>
        <result column="is_read" jdbcType="INTEGER" property="isRead"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,`to`,`from`,text,is_read,create_time,`type`
    </sql>

    <insert id="insert" parameterType="com.java.messagepart.domain.Message">
        insert into message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="to != null">
                `to`,
            </if>
            <if test="from != null">
                `from`,
            </if>
            <if test="text != null">
                text,
            </if>
            <if test="type != null">
                `type`,
            </if>
            is_read,
            create_time,
        </trim>
        <trim prefix=" values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="to != null">
                #{to},
            </if>
            <if test="from != null">
                #{from},
            </if>
            <if test="text != null">
                #{text},
            </if>
            <if test="type != null">
                #{type},
            </if>
            0,
            now(),
        </trim>
    </insert>

    <update id="update" parameterType="com.java.messagepart.domain.Message">
        update message
        <set>
            <if test="to != null">
                `to` = #{to},
            </if>
            <if test="from != null">
                `from` = #{from},
            </if>
            <if test="content != null">
                text = #{text},
            </if>
            <if test="isRead != null">
                is_read = #{isRead},
            </if>
            <if test="type != null">
                `type` = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        delete from message
        where id=#{id}
    </delete>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from message
        where id=#{id}
    </select>

    <select id="allMessage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from message
        where `to` = #{to}
        and (`type` = 0 or `type` = 1)
        order by create_time desc
    </select>

    <select id="allMessageUnread" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from message
        where is_read = 0
        and `to` = #{to}
        and (`type` = 0 or `type` = 1)
        order by create_time desc
    </select>

    <select id="allMessageRead" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from message
        where is_read = 1
        and `to` = #{to}
        and (`type` = 0 or `type` = 1)
        order by create_time desc
    </select>

    <select id="messageUnreadNum" resultType="java.lang.Integer" parameterType="java.lang.Integer">
        select count(*)
        from message
        where is_read = 0
        and `to` = #{to}
          and (`type` = 0 or `type` = 1)
    </select>

    <select id="upMessageUnreadNum" resultType="java.lang.Integer" parameterType="java.lang.Integer">
        select count(*)
        from message
        where is_read = 0
        and `to` = #{to}
        and `type` = 2
    </select>

    <select id="allUpMessage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from message
        where `to` = #{to}
        and `type` = 2
        order by create_time desc
    </select>

    <select id="allUpMessageUnread" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from message
        where is_read = 0
        and `to` = #{to}
        and `type` = 2
        order by create_time desc
    </select>

    <select id="allUpMessageRead" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from message
        where is_read = 1
        and `to` = #{to}
        and `type` = 2
        order by create_time desc
    </select>
    <update id="read" parameterType="java.lang.Integer">
        update message
        set is_read = 1
        where id = #{id}
    </update>

</mapper>
















