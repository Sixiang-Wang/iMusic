<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.imusic.dao.FollowMapper">
    <resultMap id="BaseResultMap" type="com.java.imusic.domain.Follow">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="singer_id" jdbcType="INTEGER" property="singerId"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,singer_id
    </sql>

    <insert id="insert" parameterType="com.java.imusic.domain.Follow">
        insert into follow
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="singerId != null">
                singer_id,
            </if>
        </trim>
        <trim prefix=" values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="singerId != null">
                #{singerId},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.java.imusic.domain.Follow">
        update follow
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="singerId != null">
                singer_id = #{singerId},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        delete
        from follow
        where id = #{id}
    </delete>

    <delete id="deleteByUserId" parameterType="java.lang.Integer">
        delete
        from follow
        where user_id = #{userId}
    </delete>

    <delete id="deleteBySingerId" parameterType="java.lang.Integer">
        delete
        from follow
        where singer_id = #{singerId}
    </delete>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap"
            parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from follow
        where id=#{id}
    </select>

    <select id="selectByUserIdAndSingerId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from follow
        where user_id=#{userId}
        and singer_id=#{singerId}
        limit 1
    </select>

    <select id="existFollow" resultType="java.lang.Integer">
        select count(*)
        from follow
        where user_id=#{userId}
        and singer_id=#{singerId}
    </select>

    <select id="allFollow" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from follow
    </select>



    <select id="getByUserId" resultMap="BaseResultMap"
            parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from follow
        where user_id = #{userId}
    </select>

    <select id="getBySingerId" resultMap="BaseResultMap"
            parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from follow
        where singer_id = #{singerId}
    </select>

    <select id="getCountByUserId" resultType="java.lang.Integer"
            parameterType="java.lang.Integer">
        select
            count(*)
        from follow
        where user_id = #{userId}
    </select>

    <select id="getCountBySingerId" resultType="java.lang.Integer"
            parameterType="java.lang.Integer">
        select
            count(*)
        from follow
        where singer_id = #{singerId}
    </select>

</mapper>





