<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.commentpart.dao.CommentUpMapper">
    <resultMap id="BaseResultMap" type="com.java.commentpart.domain.CommentUp" >
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="comment_id" jdbcType="INTEGER" property="commentId"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,comment_id
    </sql>

    <insert id="insert" parameterType="com.java.commentpart.domain.CommentUp">
        insert into comment_up
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if>
            <if test="commentId != null">
                comment_id,
            </if>
        </trim>
        <trim prefix=" values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId},
            </if>
            <if test="commentId != null">
                #{commentId},
            </if>
        </trim>
    </insert>


    <delete id="delete">
        delete from comment_up
        where user_id = #{userId}
        and comment_id = #{commentId}
    </delete>

    <delete id="deleteByCommentId">
        delete from comment_up
        where comment_id = #{commentId}
    </delete>

    <select id="exist" resultType="java.lang.Integer">
        select count(*) from comment_up
        where user_id=#{userId}
        and comment_id = ${commentId}
    </select>

</mapper>
















